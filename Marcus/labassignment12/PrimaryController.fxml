<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.PrimaryController">
    <children>
        <!-- Labels and TextFields for user input -->
        <Label layoutX="32.0" layoutY="39.0" text="What is your name?" />
        <TextField fx:id="nameTextField" layoutX="32.0" layoutY="63.0" />

        <Label layoutX="32.0" layoutY="105.0" text="Hello, what is your favorite food item?" />
        <TextField fx:id="foodTextField" layoutX="32.0" layoutY="129.0" />

        <Label layoutX="32.0" layoutY="171.0" text="What is your favorite social media platform?" />
        <TextField fx:id="mediaTextField" layoutX="32.0" layoutY="195.0" />

        <!-- Submit Button -->
        <Button layoutX="32.0" layoutY="237.0" mnemonicParsing="false" onAction="#handleSubmitButton" text="Submit" />

    </children>
</AnchorPane>
